<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="19dp"
    android:paddingRight="19dp">

    <View
        android:id="@+id/divider_header"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:paddingLeft="12dp">

        <ImageView
            android:id="@+id/iv_pay_channel"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            tools:src="@drawable/pic_alipay" />


        <TextView
            android:id="@+id/tv_pay_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@id/iv_pay_channel"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="支付宝" />


        <ImageView
            android:id="@+id/iv_right_arrow"
            android:layout_width="9dp"
            android:layout_height="17dp"
            android:layout_alignBottom="@id/iv_pay_channel"
            android:layout_alignTop="@id/iv_pay_channel"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            tools:src="@drawable/pic_right_arrow" />

    </RelativeLayout>

    <View
        android:id="@+id/divider_footer"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd"
        android:visibility="gone" />

</LinearLayout>