<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 输入框 -->
    <style name="et_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/while_txt</item>
        <item name="android:textColorHint">#99ffffff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginLeft">19dp</item>
        <item name="android:layout_marginRight">19dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:background">@drawable/sel_pic_2</item>
    </style>

    <!-- 登录界面按钮 -->
    <style name="login_btn">
        <item name="android:layout_width">92dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:textColor">@color/while_txt</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- 第三方登录图标 -->
    <style name="login_three_icon">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
    </style>

<!-- 选择支付图标 -->
    <style name="pay_choice_iocn">
        <item name="android:layout_width">47dp</item>
        <item name="android:layout_height">47dp</item>
    </style>
    <!-- 选择支付文字 -->
    <style name="pay_choice_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="AppTheme" parent="@android:style/android:Theme.Holo.Light">
    </style>

    <style name="CustomDialog" parent="AppTheme">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- 浮窗弹框字体-->
    <style name="Float_dialog_text" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:background">@drawable/float_txt_background</item>
        <item name="android:textColor">#7190e3</item>
        <item name="android:textSize">18dp</item>
    </style>

</resources>

